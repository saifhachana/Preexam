{% extends "base.html.twig" %}
 {% block body %}
 <br><br>
 <section class="games">
 <table class="table table-striped">
 <thread class="thread-dark">
 <tr>
 <th scope="col">Code jouet</th>
 <th scope="col">Designation du jouet</th>
 <th scope="col">Qte en stock</th>
 <th scope="col">Pu en stock</th>
 <th scope="col">Fournisseur</th>
 <th scope="col">Action</th>
 </tr>
 </thread>
 <tbody>
 {% for game in games %}
 <tr>
 <th scope="row">{{game.getCodeJouet}}</th>
<td>{{game.getDesJouet()}}</td>
<td>{{game.getQteStockJouet()}} </td>
<td>{{game.getPUJouet()}}</td>
<td>{{game.getCodeFourJouet().getDesFour()}}</td>
<td><a href="{{path('jouet-edit',{'id': game.id}) }}" class="btn btn-primary">Editer</a>
<a href="{{path('jouet-supp',{'id': game.id}) }}" class="btn btn-danger">Supprimer</a>
 </td>
 </tr>
 {% endfor %}
 </tbody>
 </table>
<a href="{{path('jouet-add') }}" class="btn btn-success">Ajouter un jouet</a>
 </section>
 {% endblock %}